@model IEnumerable<AspnetIdentitySample.Models.RabiesVaccination>

@{
    ViewBag.Title = "Rabies Vaccinations";
}

<h2>Rabies Vaccinations</h2>
<p>
    <div class="form-group">
        @Html.LabelFor(model => model, "Select Pet ", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("PetID", String.Empty)
            @Html.ValidationMessageFor(model => model)
        </div>
    </div>
    <br />
<a href="@Url.Action("Create", "RabiesVaccinations", new { id = ViewContext.RouteData.Values["id"] })" class="btn btn-primary btn-large">Create New</a></p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Pet.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Manufacturer)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.BatchNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfRabiesVaccination)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfValidityFrom)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DateOfValidityTo)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Pet.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Manufacturer)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.BatchNo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfRabiesVaccination)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfValidityFrom)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateOfValidityTo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.RabiesVaccinationID }) |
            @Html.ActionLink("Details", "Details", new { id=item.RabiesVaccinationID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.RabiesVaccinationID })
        </td>
    </tr>
}

</table>
